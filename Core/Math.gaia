/** Returns the smaller of `a` and `b`. */
function min(a, b) {
    return if a <= b then a else b
}

/** Returns the larger of `a` and `b`. */
function max(a, b) {
    return if a >= b then a else b
}

/** Returns the absolute value of `n`. */
function abs(n) {
    return if n >= 0 then n else -n
}
